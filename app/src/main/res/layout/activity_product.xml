<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F8FF"
    tools:context="com.example.samah.victo.Raw.RawActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        >
        <LinearLayout
            android:id="@+id/productScrollLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_gravity="top"
            >

            <EditText
                android:id="@+id/search_view"
                android:layout_width="40mm"
                android:layout_height="6mm"
                android:background="@drawable/search_view"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:textSize="14dp"
                />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/add_button"
        android:layout_width="9mm"
        android:layout_height="9mm"
        android:background="@drawable/add_button3"
        android:text="+"
        android:layout_margin="2dp"
        android:textColor="@color/colorWhite"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="OnclickAdd"
        />

    <LinearLayout
        android:id="@+id/productHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/productheader"
        android:orientation="vertical"
        android:gravity="top|left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/productBackButton"
            android:layout_width="8mm"
            android:layout_height="8mm"
            android:layout_margin="3mm"
            android:background="@drawable/arrow"
            android:onClick="OnclickBack" />




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
